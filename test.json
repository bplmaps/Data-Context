{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://github.com/nblmc/Data-Context/blob/master/schema.json",
	"title": "LMEC Data Description Schema",
	"type": "object",
	"properties":{
		"coreCitation": {
			"description": "Basic facts about the dataset or project",
			"type": "object",
			"properties": {
				"$id": {
					"type": "string",
					"format": "uri"
				},
				"title": {
					"description": "Full name of the dataset or project",
					"type": "string"
				},
				"shortDescription": {
					"description": "Short description of the dataset or project",
					"type": "string"
				},
				"language": {
					"type": "object",
					"properties": {
						"authority":{
							"type": "string",
							"const": "https://www.loc.gov/standards/iso639-2/php/code_list.php"
						},
						"value": {
							"type": "string"
						}
					}
				},
				"entryType": {
					"description": "Provides flexibility on how context information is displayed, depending on whether it is describing a unique datasets, or a collection of datasets that have been somehow processed together into a data 'recipe' or project, for the purposes of analysis and visualization.",
					"type": "string",
					"enum": ["Dataset", "Project"]
                },
                "datasetType": {
					"type": "string",
					"enum": ["Polygon", "Raster", "Line", "Point", "MultiPolygon", "MultiLineString", "MultiPoint", "Undetermined"]
                },
                "subComponentOf": {
					"description": "If this metadata record describes a dataset, populate each project object in this section with URIs of larger data projects this dataset is included in, and notes about how it is used in that project. To be used within data discovery environments",
                    "type": "object",
                    "properties": {
                        "projects":{
                            "type": "array",
                            "items": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "projectURI":{
                                            "type": "string",
                                            "format": "uri"
                                        },
                                        "relationshipNotes":{
                                            "type": "string"
                                        }
                                    }
                                }
                            ]
                        }

                    }
                },
				"includesDatasets": {
					"description": "Can contain multiple objects. If this record is for a project, populate each object with the URIs of the subcomponents, if catalog records exist. To be used within data discovery environments",
					"type": "object",
					"properties": {
						"ingredient": {
							"description": "The URI for the dataset which is a subcomponent of this project",
							"type": "string",
							"format": "uri"
						},
						"relationshipNotes": {
							"description": "Clarifying information about this relationship/connection",
							"type": "string"
						}						
					}
				},
				"relatedTo": {
					"description": "Can contain multiple objects. Way to link similar record URIs for discovery",
					"type": "object",
					"properties": {
						"$id": {
							"type": "string",
							"format": "uri"
						},
						"relationshipNotes":{
							"description": "Qualifying information about the nature of the relationship",
							"type": "string"
						}
					}
				},
				"bboxEnvelope":{
					"type": "object",
					"properties": {
						"srs":{
							"description": "SRS provided in EPSG",
							"type": "string",
							"examples": "EPSG:4326"
						},
						"lowerCorner":{
							"type": "array",
							"items": {
								"type": "number",
								"examples": [-71.181891, 42.330256]
							}
						},
						"upperCorner": {
							"type": "array",
							"items": {
								"type": "number",
								"examples": [-71.181891, 42.330256]
							}
						}
					}
				}
			},
			"required": ["$id", "title", "shortDescription", "language", "entryType", "bboxEnvelope"]
		}
	}
}